<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :product_name %>
    <%= form.text_field :product_name, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :size %>
    <%= form.text_field :size, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :comments %>
    <%= form.text_area :comments, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :product_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>

  <br/>
  <div class="actions">
    <%= form.submit %>
  </div>
  <br/>
<% end %>
